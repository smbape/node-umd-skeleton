deps = [
    'umd-stdlib/core/common'
    '../views/hello/templates/display'
]

factory = (require, com, displayTemplate)->
    Backbone = com.Backbone

    class HelloController extends com.gen.controllers.ClientController
        displayAction: ->
            # main model
            model = new Backbone.Model
                firstname: 'John'
                lastname: 'Doe'
                occupation: 'Memory seeker'
                country: 'Zero'

            # main view
            @view = new com.gen.views.View
                title: @get 'title'
                className: 'block'
                model: model
                template: displayTemplate

            # do render task
            @render()
            return