<tr>
    <td>{{model.firstname}}</td>
    <td>{{model.lastname}}</td>
    <td>{{model.occupation}}</td>
    <td>{{model.country}}</td>
    <td>
        {{!-- http://handlebarsjs.com/block_helpers.html#block-params --}}
        {{#variables 1 as |params|}}
            {{extend params module='tutorial' controller='hello' action='edit' id=model.id ack=view.ack}}
            <a class="btn btn-default popin" href="{{url 'controller' 'default' params}}">
                {{t 'form.edit'}}
            </a>
            <button type="button" class="btn btn-default delete" data-id="{{model.id}}">
                {{t 'form.delete'}}
            </button>
        {{/variables}}
    </td>
</tr>