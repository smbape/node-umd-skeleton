// http://visionmedia.github.com/nib/
@import 'nib'

@require 'variables'

// Apply a natural box app-layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
    box-sizing: border-box

body
    font-size: 14px
    background-color: bodyBackgroundColor

h1, h2, h3, h4, h5, h6
    &:hover
        a.anchor,
        a.toc-anchor
            display: inline-block
            font: normal normal normal 14px/1 FontAwesome
            font-size: inherit
            text-rendering: auto
            -webkit-font-smoothing: antialiased
            -moz-osx-font-smoothing: grayscale
            &:before
                content: "\f0c1"

#header
    background-color: headerBackgroundColor
    a
        color: headerLinkColor
        &:hover
            color: headerLinkHoverColor

    .chg-lng.disabled a
        opacity: 0.6

    .navbar-toggle
        color: headerButtonColor
        background-color: headerButtonBackgroundColor
        &:hover
            background-color: headerButtonHoverBackgroundColor
    > .navbar
        margin: 0
    .settings
        padding-top: 7px
        .btn
            padding: 6px 12px
            display: inline-block

#menu
    overflow: auto
    background-color: menuBackgroundColor
    padding-top: 20px
    padding-left: 0
    padding-bottom: 0
    padding-right: 0
    font-weight: bold

    a
        color: menuLinkColor
        &:hover, &:focus
            color: menuLinkHoverColor
            background-color: menuLinkHoverBackgroundColor

    li.active > a
        color: menuLinkActiveColor
        background-color: menuLinkActiveBackgroundColor

    @media (max-width: 768px)
        position: absolute
        top: 60px
        left: 0
        padding: 0
        display: none
        // bootstrap .input-group .form-control rule has a z-index: 2
        z-index: 3

.app-layout
    overflow: auto
    padding-right: 0
    padding-left: 0
    background-color: contentBackgroundColor
    color: contentColor

    a
        color: contentLinkColor
        &:hover
            color: contentLinkHoverColor
            text-decoration: none

    .popover
        background-color: contentBackgroundColor

    .btn-default
        color: contentButtonColor
        background-color: contentButtonBackgroundColor
        border-color: contentButtonColor
        &:hover
            color: contentButtonColor
            background-color: contentButtonHoverBackgroundColor
            border-color: contentButtonColor

    .table
        > thead
        > tbody
        > tfoot
            > tr
                > th
                > td
                    vertical-align: middle

.menu
    list-style-type: none
    padding: 0

    i
        width: 40px
        height: 25px
        line-height: 25px
        text-align: center
        cursor: pointer

    .menu-item
        .menu-children
            display: none
            list-style-type: none
            padding-left: 25px

        .menu-header
            border-top-left-radius: 4px
            border-top-right-radius: 0
            border-bottom-right-radius: 0
            border-bottom-left-radius: 4px

        .close-menu,
        .show-parent,
        .show-children,
        .open-children,
        .close-children
            display: none

        &.has-parent
            > .menu-header
                > .show-parent
                    display: inline-block
                    @media (min-width: 768px)
                        display: none
        &.has-children
            > .menu-header
                > .open-children,
                > .show-children
                    display: inline-block

            &.opened
                > .menu-children
                    display: block
                > .menu-header
                    > .close-children
                        display: inline-block
                    > .open-children
                        display: none

        @media (min-width: 768px)
            &,
            &.has-parent,
            &.has-children,
            &.has-children.opened
                > .menu-header
                    > .show-parent,
                    > .show-children
                        display: none

        @media (max-width: 768px)
            &,
            &.has-parent,
            &.has-children,
            &.has-children.opened
                > .menu-header
                    > .open-children,
                    > .close-children
                        display: none

#container
    padding-left: 2px
    padding-right: 2px
    margin: auto

.block
    border 1px solid menuLinkColor
    padding 15px 40px
    display block
    margin-bottom: 10px

    &.style-default
        background-color: menuBackgroundColor
        color: menuLinkColor

    @media (max-width: 768px)
        padding 10px

@media (min-width: 768px)
    // sm
    #container
        padding-left: 10px
        padding-right: 10px
        width: 98%

@media (min-width: 992px)
    // md
    #container
        width: 97%

@media (min-width: 1200px)
    // lg
    #container
        width: 95%

@media (min-width: 1360px)
    #container
        width: 90%
